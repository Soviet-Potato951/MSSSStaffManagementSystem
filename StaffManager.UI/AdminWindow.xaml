<Window x:Class="StaffManager.UI.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin"
        Width="580" Height="360"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#FFF6F3F3">

    <!-- Alt+G closes via VM command -->
    <Window.InputBindings>
        <KeyBinding Modifiers="Alt" Key="G" Command="{Binding CloseAdminPanelKeybind}"/>
    </Window.InputBindings>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" LastChildFill="True">
            <TextBlock Text="Administration" FontSize="20" FontWeight="SemiBold"
                       Foreground="#222" Margin="0,0,12,0"/>
            <Separator Margin="0,12,0,0" VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Inputs -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Name" Foreground="#333" Margin="0,0,0,6"/>
                <TextBox x:Name="NameBox"
                         Height="32" Padding="6"
                         BorderBrush="#D0D0D0" BorderThickness="1"
                         Background="White"
                         Text="{Binding StaffName, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="ID" Foreground="#333" Margin="0,0,0,6"/>
                <TextBox x:Name="IdBox" 
                         Height="32" Padding="6"
                         BorderBrush="#D0D0D0" BorderThickness="1"
                         Background="White"
                         Text="{Binding StaffId, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="{Binding IsStaffIdReadOnly}" />
            </StackPanel>
        </Grid>

        <!-- List + actions -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                <Button Content="Add"    Width="90" Margin="4,0" Command="{Binding AddStaffCommand}"/>
                <Button Content="Update" Width="90" Margin="4,0" Command="{Binding UpdateStaffCommand}"/>
                <Button Content="Remove" Width="90" Margin="4,0" Command="{Binding RemoveStaffCommand}"/>
                <Button Content="Close (Alt+G)" Width="120" Margin="16,0,0,0"
                        Command="{Binding CloseAdminPanelKeybind}"/>
            </StackPanel>
        </Grid>

        <!-- Status bar -->
        <StatusBar Grid.Row="5" Margin="0,8,0,0" Background="#FAFAFA" BorderBrush="#D0D0D0" BorderThickness="1">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
